<style>
  .charge{
    margin-top: 20px;
    align-text: center;
    float: left;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h5>Informações de Uso: </h5>
    </div>
  </div>
  <div style="margin-left:2px" data-target="#batteryModal" data-toggle="modal"  class="row h-100 col-12 applyBorder batteryInfo pointer">
    <div class="col-6 battery">
      <% if Integer(@transporte.bateria) <= 30 %>
          <span class="fas fa-4x fa-battery-quarter red"></span>  
      <% elsif Integer(@transporte.bateria) > 30 && Integer(@transporte.bateria) <= 69 %>
        <span class="fas fa-4x fa-battery-half yellow"></span>  
      <% else %>
        <span class="fas fa-4x fa-battery-three-quarters green"></span>  
      <% end %>
      <h6>Uso de bateria</h6>
    </div>
    <div class="col-6 remainingTime charge">
      Carga atual: <b><%= @transporte.bateria %>%</b>
    </div>
  </div>
 <div class"row">
   <h5>Estatísticas de uso: </h5>
 </div>
  <div class="row col-12 col-lg">
    <div class="col-6 chart">
        <div style="margin-left: -5px" data-target="#graphicModal" data-toggle="modal" style="margin-left:50px"><div class="fas fa-4x pointer fa-chart-line"></div></div>
       <h6>Gráfico de carga </h6>
    </div>
    <div class="col-6">
      <div class="row-12 h-50">
        Quoeficiente de bateria: <b><%= Float(@transporte.ratio).round(2) %></b>
      </div>
      <div class="row-12 h-50">
        Última atualização: <%= @transporte.updated_at.utc.strftime("%d/%m/%Y as %H:%M") %>
      </div>
    </div>
   
  </div>
</div>
